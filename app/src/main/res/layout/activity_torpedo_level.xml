<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="#000000">
    <!-- TextView to show level status -->
    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#00FF00"
    android:layout_marginBottom="16dp"
    android:text="Tilt to horizontal to activate"
    android:layout_centerHorizontal="true"/>

    <!-- Horizontal bubble bar with centered bubble -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:background="@drawable/torpedo_background"

    android:padding="10dp">

    <!-- Bubble that indicates level when centered -->
    <View
        android:id="@+id/bubbleView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bubble_circle"/>
</LinearLayout>
    </RelativeLayout>
